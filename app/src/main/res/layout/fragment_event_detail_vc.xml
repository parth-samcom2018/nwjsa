<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventDetailVC"
    android:padding="@dimen/med_pad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/textshape">
        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:fontFamily="@font/lato_regular"
            style="@style/textview_extra_large"
            android:textStyle="normal"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            style="@style/textview_normal"
            android:textColor="@color/gray"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event date"
            style="@style/textview_large"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            style="@style/textview_normal"
            android:textColor="@color/gray"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/timeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event time"
            style="@style/textview_large"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            style="@style/textview_normal"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="10dp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/locationTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event location"
            style="@style/textview_large"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            style="@style/textview_normal"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="10dp"
            android:textColor="@color/gray"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:fontFamily="@font/lato_regular"
            style="@style/textview_normal"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="10dp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/notesTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event notes"
            style="@style/textview_large"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="@dimen/med_pad"
            android:paddingTop="5dp"/>
    </LinearLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/grid_cell_height_extra_large"
    android:padding="10dp"
    android:clickable="true">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_cell_height_extra_large"
        android:visibility="gone"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_cell_height_extra_large"
        android:background="@android:color/transparent"
        android:padding="5dp">


        <ProgressBar
            android:id="@+id/progressBar_media"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:indeterminate="true"
            android:elevation="5dp"/>

        <TextView
            android:id="@+id/tv_media"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="Sports Club HQ"
            android:elevation="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/progressBar_media"
            android:visibility="visible"/>


        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_cell_height_extra_large"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:background="@drawable/textshape"/>

        <TextView
            android:id="@+id/firstTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textview_normal"
            android:fontFamily="@font/lato_regular"
            android:textStyle="bold"
            android:textSize="13sp"
            android:lines="2"
            android:minLines="2"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="center|left"
            android:text="Rugby National Now I have A really long adn big name" />

    </RelativeLayout>


    <Button
        android:id="@+id/flagButton"
        android:layout_width="@dimen/flag_button_width"
        android:layout_height="@dimen/flag_button_width"
        android:background="@drawable/flag"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

    </LinearLayout>

</RelativeLayout>